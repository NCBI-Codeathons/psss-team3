profiles {
    local {
        process.executor = 'local'
    }

    docker {
        process.executor = 'local'
        docker.enabled = true
    }

    aws_batch {
        process.executor = 'awsbatch'
        aws.region = 'us-east-1'
        aws.batch.cliPath = '/home/ec2-user/miniconda/bin/aws'
    }
    gscc {
        executor {
            name = 'slurm'
            queueSize = 3  // this will run 3 concurrent jobs
        }
//        docker {  // this SHOULD cause the 'docker run' call to include the --pull flag. It works manually, but fails in the scripted system
//            runOptions = '--pull "missing"' // replace 'missing' with 'always' to force image update
//        }
        process.clusterOptions = '--partition=wheeler_lab_small_cpu'
        docker.enabled = true
    }
}

